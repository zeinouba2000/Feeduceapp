<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zeineb.myfirstapp.AddpostFragment">

    <!-- TODO: Update blank fragment layout -->


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="7dp" />

                <RelativeLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photo"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/ubuntulight"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/photocamera"
                        android:scaleType="centerInside"
                        android:padding="27dp"
                        />

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/ubuntulight"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:backgroundTint="#666666"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/ubuntulight"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:inputType="textMultiLine"
                        android:lines="6"
                        android:maxLines="6"
                        android:backgroundTint="#666666"
                        android:scrollbars="vertical"
                        android:hint=" e.g. Quality, quantity, cooked or not "
                        android:gravity="top|left"
                        android:scrollHorizontally="false"
                        android:textSize="17dp"
                        />

                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keep Listed For"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/ubuntulight"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:entries="@array/days"
                        android:textAlignment="gravity"
                        android:drawSelectorOnTop="false"
                        android:fontFamily="@font/ubuntulight"
                        >
                    </Spinner>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#F4F4F4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approximate Pick-up location"
                        android:fontFamily="@font/ubuntulight"
                        android:textSize="19dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:backgroundTint="#666666"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick-up Times"
                        android:fontFamily="@font/ubuntulight"
                        android:textSize="19dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:maxLines="3"
                        android:hint=" e.g. Weekday evenings only "
                        android:gravity="top|left"
                        android:textSize="17dp"
                        />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <Button

                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Submit"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:fontFamily="@font/ubuntulight"
                    android:background="#F39C11"
                    android:textColor="#f5f4f4"
                    android:textStyle="bold"
                    />


            </LinearLayout>

        </ScrollView>



</FrameLayout>
